<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ServiciosFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Callejon #20 Col. R"
        android:layout_margin="15dp"
        android:textStyle="bold"
        android:textColor="#17202A"
        android:textSize="15sp"
        />
    <androidx.appcompat.widget.SearchView
        android:id="@+id/id_searchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:background="@drawable/searchviewbutton"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categorias"
        android:layout_marginLeft="25dp"
        android:textStyle="bold"
        android:textColor="#17202A"
        android:textSize="15sp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/id_rv_lista_categorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Servicios"
        android:layout_marginLeft="25dp"
        android:textStyle="bold"
        android:textColor="#17202A"
        android:textSize="15sp"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/id_rv_lista_servicios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="10dp"
        />
</LinearLayout>